@model IEnumerable<Gym_sports_training.Models.Entities.Coach>

@{
    ViewBag.Title = "Our coaches";
}

<h2>Coaches</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm("Index", "Coaches", FormMethod.Get))
{
    <p>
        Speciality: @Html.DropDownList("coachSpeciality", "All")
        <input type="submit" value="Filter" />
    </p>
}
        <table class="table">
            <tr>
                <th>
                    Full Name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Speciality)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    Training length
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.ActionLink(item.FullName, "Details", new { id = item.Id }) 
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Speciality)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TrainingLength)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
